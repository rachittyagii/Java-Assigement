import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String sentence = scanner.nextLine(); // Input sentence
        char ch = scanner.nextLine().charAt(0); // Input character to count

        // Initialize a count variable
        int count = 0;

        // Iterate through the characters of the sentence
        for (int i = 0; i < sentence.length(); i++) {
            char currentChar = sentence.charAt(i);

            // Check if the current character matches the given character
            if (currentChar == ch) {
                count++;
            }
        }

        // Print the count of the given character
        System.out.println(count);
    }
}
